generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Job       Job[]
  User_jobs User_jobs[]
}

model Job {
  id          String @id @default(uuid())
  user_id     String
  jobtechId   String
  companyName String
  jobHeadline String
  companyURL  String?
  User        User   @relation(fields: [user_id], references: [id], onUpdate: Restrict, map: "user_id")

  @@index([user_id])
}

model User_jobs {
    id          String @id @default(uuid())
    user_id     String
    jobtechId   String
    User        User   @relation(fields: [user_id], references: [id], onUpdate: Restrict, map: "user_id")

  @@index([user_id])
}